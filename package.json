{
  "name": "javascript-test-runner-reloaded",
  "displayName": "JavaScript Test Runner Reloaded",
  "description": "Run JavaScript tests easily using CodeLens.",
  "version": "2.0.0",
  "publisher": "alexeynobody",
  "engines": {
    "vscode": "^1.18.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "mocha",
    "react-scripts",
    "jest",
    "test",
    "unit"
  ],
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alexeynobody/javascript-test-runner"
  },
  "icon": "ressources/icon.png",
  "main": "./dist/extension",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "javascript-test-runner-reloaded.run.test",
        "title": "Run Test"
      }
    ],
    "configuration": [
      {
        "properties": {
          "javascript-test-runner-reloaded.additionalArgs": {
            "type": "string",
            "default": "",
            "description": "CLI args to pass to test runner. Example : --watch",
            "scope": "resource"
          },
          "javascript-test-runner-reloaded.envVars": {
            "type": "object",
            "default": {
              "NODE_ENV": "test"
            },
            "description": "Environment variables to set before running a test.",
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc --noUnusedParameters --noUnusedLocals -p ./",
    "watch": "tsc -watch  --noUnusedParameters --noUnusedLocals  -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,json} package.json",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "all-contributors-cli": "^6.9.3",
    "eslint": "^6.6.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2",
    "typescript": "^3.7.2",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "@babel/core": "^7.7.0",
    "@babel/parser": "^7.7.0",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/plugin-syntax-typescript": "^7.3.3"
  }
}
